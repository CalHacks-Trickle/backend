#!/usr/bin/env node

/**
 * Module dependencies.
 */
var app = require('../app');
var debug = require('debug')('trickle-backend:server');
var http = require('http');
const { Server } = require("socket.io");
const jwt = require('jsonwebtoken');

// State and Services
const liveSessions = require('../state/live-sessions');
const { buildStatusPayload } = require('../services/state.service.js');
const { classifyApp } = require('../services/groq.service.js');

// Database Models
const AppClassification = require('../models/app-classification.model.js');
const DailyUsage = require('../models/daily-usage.model.js');

// Scheduled Jobs
const { scheduleDailyAggregation } = require('../jobs/daily-aggregation.js');

/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */
var server = http.createServer(app);

/**
 * Create Socket.IO server.
 */
const io = new Server(server, { cors: { origin: "*" } });

/**
 * Socket.IO Authentication Middleware.
 */
io.use((socket, next) => {
  const token = socket.handshake.auth.token; // Correctly read from the 'auth' object
  if (!token) {
    return next(new Error('Authentication error: Token not provided'));
  }
  jwt.verify(token, process.env.JWT_SECRET, (err, decoded) => {
    if (err) {
      return next(new Error('Authentication error: Invalid token'));
    }
    socket.user = decoded.user;
    next();
  });
});

/**
 * Records the duration of the previous app usage.
 * @param {string} userEmail - The user's email.
 */
async function recordPreviousAppUsage(userEmail) {
    const previousSession = liveSessions.get(userEmail);
    if (previousSession) {
        const durationInSeconds = Math.round((new Date() - previousSession.startTime) / 1000);
        if (durationInSeconds > 0) {
            await DailyUsage.add(
                userEmail,
                previousSession.appName,
                previousSession.classification,
                durationInSeconds
            );
            console.log(`Recorded ${durationInSeconds}s for ${previousSession.appName} for user ${userEmail}`);
        }
    }
}

/**
 * Socket.IO Connection Handler.
 */
io.on('connection', (socket) => {
  console.log(`User connected: ${socket.user.email}`);

  const statusInterval = setInterval(() => {
    const liveSession = liveSessions.get(socket.user.email);
    const classification = liveSession ? liveSession.classification : 'distracting';
    socket.emit('status-updated', buildStatusPayload(classification));
  }, 300000);

  socket.on('update-app', async (data) => {
    try {
      if (data && data.appName) {
        await recordPreviousAppUsage(socket.user.email);

        const appName = data.appName;
        let classification = await AppClassification.get(appName);

        if (!classification) {
          classification = await classifyApp(appName);
          await AppClassification.save(appName, classification);
        }

        liveSessions.set(socket.user.email, { appName, classification, startTime: new Date() });
        socket.emit('status-updated', buildStatusPayload(classification));
      }
    } catch (error) {
        console.error("[WebSocket Error] Failed to process 'update-app' event:", error);
    }
  });

  socket.on('disconnect', async () => {
    console.log(`User disconnected: ${socket.user.email}`);
    await recordPreviousAppUsage(socket.user.email); // Record the final app usage before disconnect
    liveSessions.delete(socket.user.email);
    clearInterval(statusInterval);
  });
});

/**
 * Start the server and scheduled jobs.
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);
scheduleDailyAggregation(); // Start the daily cron job

// ... (rest of the file is the same)
function normalizePort(val) {
  var port = parseInt(val, 10);
  if (isNaN(port)) { return val; }
  if (port >= 0) { return port; }
  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') { throw error; }
  var bind = typeof port === 'string' ? 'Pipe ' + port : 'Port ' + port;
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string' ? 'pipe ' + addr : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
